<views:FluentWindow
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:BEditor.Views"
    xmlns:titlebar="using:BEditor.Views.CustomTitlebars"
    mc:Ignorable="d" Width="480" Height="128"
    WindowStartupLocation="CenterScreen"
    CanResize="False"
    Classes="fluent"
    Background="{StaticResource NavigationViewContentBackground}"
    x:Class="BEditor.Views.DialogContent.ProgressDialog">
    <Grid RowDefinitions="*,*,Auto">

        <TextBlock
            Grid.Row="0"
            Text="{Binding Text.Value}"
            FontFamily="Yu Gothic UI, Segoe UI, Hiragino Sans, Helvetica Neue, Ubuntu"
            Margin="8,0" />

        <ProgressBar
            Margin="8"
            Grid.Row="1"
            IsIndeterminate="{Binding IsIndeterminate.Value}"
            Maximum="{Binding Maximum.Value}"
            Minimum="{Binding Minimum.Value}"
            Value="{Binding NowValue.Value}" />

        <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            x:Name="stack"
            Spacing="8"
            Margin="8"
            VerticalAlignment="Bottom"
            Grid.Row="2" />
    </Grid>
</views:FluentWindow>
