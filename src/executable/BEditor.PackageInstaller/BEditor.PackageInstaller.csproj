<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="..\..\..\props\Avalonia.props" />
    <Import Project="..\..\..\props\ReactiveProperty.props" />
    <Import Project="..\..\..\props\Microsoft.CodeAnalysis.CSharp.Scripting.props" />

    <ItemGroup>
        <EmbeddedResource Include="Assets\Fonts\*.otf" />
        <AvaloniaResource Include="Assets\**" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\libraries\BEditor.Packaging\BEditor.Packaging.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Compile Update="Resources\Strings.Designer.cs">
            <DesignTime>True</DesignTime>
            <AutoGen>True</AutoGen>
            <DependentUpon>Strings.resx</DependentUpon>
        </Compile>
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Update="Resources\Strings.resx">
            <LastGenOutput>Strings.Designer.cs</LastGenOutput>
            <Generator>PublicResXFileCodeGenerator</Generator>
        </EmbeddedResource>
    </ItemGroup>

    <ItemGroup Condition="'$(Configuration)'=='Debug'">
        <None Update="sample.json">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>

</Project>