<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:BEditor.ViewModels.Settings"
             xmlns:resources="using:BEditor.LangResources"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:uip="using:FluentAvalonia.UI.Controls.Primitives"
             x:DataType="vm:AppearanceViewModel"
             xmlns:root="clr-namespace:BEditor;assembly=BEditor.Settings"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BEditor.Views.Settings.Appearance">
    <UserControl.DataContext>
        <vm:AppearanceViewModel/>
    </UserControl.DataContext>
    <ScrollViewer>
        <VirtualizingStackPanel Spacing="8" Margin="16,8">

            <TextBlock Text="{x:Static resources:Strings.General}" Classes="Header"/>

            <Border Classes="Item" ToolTip.Tip="{x:Static resources:Strings.TheChangesWillBeAppliedAfterRestarting}">
                <CheckBox
                    Content="{x:Static resources:Strings.UseDarkMode}"
                    IsChecked="{Binding UseDarkMode, Source={x:Static root:Settings.Default}, Mode=TwoWay}" />
            </Border>

            <Border Classes="Item" ToolTip.Tip="{x:Static resources:Strings.TheChangesWillBeAppliedAfterRestarting}">
                <CheckBox
                    Content="{x:Static resources:Strings.ShowStartWindow}"
                    IsChecked="{Binding ShowStartWindow, Source={x:Static root:Settings.Default}, Mode=TwoWay}" />
            </Border>

            <Border Classes="Item" ToolTip.Tip="{x:Static resources:Strings.TheChangesWillBeAppliedAfterRestarting}">
                <Panel>
                    <TextBlock Text="{x:Static resources:Strings.Language}" VerticalAlignment="Center" />

                    <ComboBox
                        ToolTip.Tip="{x:Static resources:Strings.TheChangesWillBeAppliedAfterRestarting}"
                        Items="{CompiledBinding Langs, Mode=OneTime}"
                        SelectedItem="{Binding Language, Source={x:Static root:Settings.Default}, Mode=TwoWay}"
                        Classes="Editor">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Panel>
            </Border>

            <Separator Height="16" />

            <TextBlock Text="{x:Static resources:Strings.Timeline}" Classes="Header2"/>

            <Border Classes="Item" ToolTip.Tip="{x:Static resources:Strings.TheChangesWillBeAppliedAfterRestarting}">
                <Panel>
                    <TextBlock Text="{x:Static resources:Strings.ClipHeight}" VerticalAlignment="Center" />

                    <NumericUpDown
                        Value="{Binding ClipHeight, Source={x:Static root:Settings.Default}, Mode=TwoWay}"
                        Classes="Editor"/>
                </Panel>
            </Border>

            <Border Classes="Item" ToolTip.Tip="{x:Static resources:Strings.TheChangesWillBeAppliedAfterRestarting}">
                <Panel>
                    <TextBlock Text="{x:Static resources:Strings.WidthOf1Frame}" VerticalAlignment="Center" />

                    <NumericUpDown
                        Value="{Binding FrameWidth, Source={x:Static root:Settings.Default}, Mode=TwoWay}"
                        Classes="Editor"/>
                </Panel>
            </Border>

            <Border Classes="Item">
                <CheckBox
                    Content="{x:Static resources:Strings.FixSeekbar}"
                    IsChecked="{Binding FixSeekbar, Source={x:Static root:Settings.Default}, Mode=TwoWay}" />
            </Border>

            <Border Classes="Item">
                <Panel>
                    <TextBlock Text="{x:Static resources:Strings.LayerThickness}" VerticalAlignment="Center" />

                    <ComboBox
                        SelectedItem="{CompiledBinding SelectedLayerBorder.Value, Mode=TwoWay}"
                        Items="{CompiledBinding LayerBorderItems}"
                        Classes="Editor">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Text}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                </Panel>
            </Border>
        </VirtualizingStackPanel>
    </ScrollViewer>
</UserControl>
