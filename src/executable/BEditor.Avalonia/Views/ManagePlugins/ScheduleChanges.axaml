<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:props="using:BEditor.Properties"
    xmlns:vm="using:BEditor.ViewModels.ManagePlugins"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    x:DataType="vm:ScheduleChangesViewModel"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Name="root"
    x:Class="BEditor.Views.ManagePlugins.ScheduleChanges">
    <UserControl.DataContext>
        <vm:ScheduleChangesViewModel/>
    </UserControl.DataContext>
    <ListBox Items="{CompiledBinding Schedules, Mode=OneTime}">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Panel>
                    <Grid RowDefinitions="Auto,*" Margin="8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="16" Text="{Binding Name}" />

                            <TextBlock
                                FontSize="12"
                                VerticalAlignment="Center"
                                Margin="16,0,0,0"
                                Text="{Binding Type}"/>
                        </StackPanel>

                        <TextBlock
                            FontSize="12"
                            Margin="0,10,0,0"
                            Text="{Binding Description}"
                            Grid.Row="1" />
                    </Grid>

                    <ui:CommandBarButton
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Icon="Dismiss"
                        Label="{x:Static props:Strings.Cancel}"
                        CommandParameter="{Binding $self.DataContext}"
                        Command="{Binding #root.DataContext.Cancel, Mode=OneTime}"/>
                </Panel>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>
