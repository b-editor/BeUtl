<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:BEditor.ViewModels"
    xmlns:prop="using:BEditor.LangResources"
    x:DataType="vm:VideoOutputViewModel"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="BEditor.Views.VideoOutputPages.Infomation">
    <ScrollViewer>
        <VirtualizingStackPanel Spacing="8" Margin="16,8">
            <!--情報-->
            <TextBlock Text="{x:Static prop:Strings.Infomation}" Classes="Header" />

            <!--シーン-->
            <Border Classes="Item">
                <Panel>
                    <TextBlock Text="{x:Static prop:Strings.Scene}" VerticalAlignment="Center" />

                    <ComboBox
                        Classes="Editor"
                        Items="{CompiledBinding Project.SceneList, Mode=OneTime}"
                        SelectedItem="{CompiledBinding SelectedScene.Value, Mode=TwoWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding SceneName}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Panel>
            </Border>

            <!--横幅-->
            <Border Classes="Item">
                <Panel>
                    <TextBlock Text="{x:Static prop:Strings.Width}" VerticalAlignment="Center" />

                    <TextBox
                        Classes="Editor"
                        IsReadOnly="True"
                        Text="{CompiledBinding SelectedScene.Value.Width, Mode=OneWay}" />
                </Panel>
            </Border>

            <!--高さ-->
            <Border Classes="Item">
                <Panel>
                    <TextBlock Text="{x:Static prop:Strings.Height}" VerticalAlignment="Center" />

                    <TextBox
                        Classes="Editor"
                        IsReadOnly="True"
                        Text="{CompiledBinding SelectedScene.Value.Height, Mode=OneWay}" />
                </Panel>
            </Border>

            <!--フレームレート-->
            <Border Classes="Item">
                <Panel>
                    <TextBlock Text="{x:Static prop:Strings.Framerate}" VerticalAlignment="Center" />

                    <TextBox
                        Classes="Editor"
                        IsReadOnly="True"
                        Text="{CompiledBinding Project.Framerate, Mode=OneWay}" />
                </Panel>
            </Border>

            <!--サンプリングレート-->
            <Border Classes="Item">
                <Panel>
                    <TextBlock Text="{x:Static prop:Strings.Samplingrate}" VerticalAlignment="Center" />

                    <TextBox
                        Classes="Editor"
                        IsReadOnly="True"
                        Text="{CompiledBinding Project.Samplingrate, Mode=OneWay}" />
                </Panel>
            </Border>

        </VirtualizingStackPanel>
    </ScrollViewer>
</UserControl>
