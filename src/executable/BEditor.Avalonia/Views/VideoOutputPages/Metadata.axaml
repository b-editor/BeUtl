<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:BEditor.ViewModels"
    xmlns:prop="using:BEditor.Properties"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    x:DataType="vm:VideoOutputViewModel"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="BEditor.Views.VideoOutputPages.Metadata">
    <ScrollViewer>
        <VirtualizingStackPanel Spacing="8" Margin="16,8">

            <TextBlock Text="{x:Static prop:Strings.Metadata}" Classes="Header"/>

            <!--Title-->
            <Border Classes="Item">
                <Panel>
                    <TextBlock Text="Title" VerticalAlignment="Center" />

                    <TextBox
                        Text="{CompiledBinding Title.Value, Mode=TwoWay}"
                        Classes="Editor"/>
                </Panel>
            </Border>

            <!--Author-->
            <Border Classes="Item">
                <Panel>
                    <TextBlock Text="Author" VerticalAlignment="Center" />

                    <TextBox
                        Text="{CompiledBinding Author.Value, Mode=TwoWay}"
                        Classes="Editor"/>
                </Panel>
            </Border>

            <!--Album-->
            <Border Classes="Item">
                <Panel>
                    <TextBlock Text="Album" VerticalAlignment="Center" />

                    <TextBox
                        Text="{CompiledBinding Album.Value, Mode=TwoWay}"
                        Classes="Editor"/>
                </Panel>
            </Border>
            
            <!--Year-->
            <Border Classes="Item">
                <Panel>
                    <TextBlock Text="Year" VerticalAlignment="Center" />

                    <TextBox
                        Text="{CompiledBinding Year.Value, Mode=TwoWay}"
                        Classes="Editor"/>
                </Panel>
            </Border>

            <!--Genre-->
            <Border Classes="Item">
                <Panel>
                    <TextBlock Text="Genre" VerticalAlignment="Center" />

                    <TextBox
                        Text="{CompiledBinding Genre.Value, Mode=TwoWay}"
                        Classes="Editor"/>
                </Panel>
            </Border>

            <!--Description-->
            <Border Classes="Item">
                <Panel>
                    <TextBlock Text="Description" VerticalAlignment="Center" />

                    <TextBox
                        Text="{CompiledBinding Description.Value, Mode=TwoWay}"
                        Classes="Editor"/>
                </Panel>
            </Border>

            <!--Language-->
            <Border Classes="Item">
                <Panel>
                    <TextBlock Text="Language" VerticalAlignment="Center" />

                    <TextBox
                        Text="{CompiledBinding Language.Value, Mode=TwoWay}"
                        Classes="Editor"/>
                </Panel>
            </Border>

            <!--Copyright-->
            <Border Classes="Item">
                <Panel>
                    <TextBlock Text="Copyright" VerticalAlignment="Center" />

                    <TextBox
                        Text="{CompiledBinding Copyright.Value, Mode=TwoWay}"
                        Classes="Editor"/>
                </Panel>
            </Border>

            <!--Rating-->
            <Border Classes="Item">
                <Panel>
                    <TextBlock Text="Rating" VerticalAlignment="Center" />

                    <TextBox
                        Text="{CompiledBinding Rating.Value, Mode=TwoWay}"
                        Classes="Editor"/>
                </Panel>
            </Border>

            <!--TrackNumber-->
            <Border Classes="Item">
                <Panel>
                    <TextBlock Text="TrackNumber" VerticalAlignment="Center" />

                    <TextBox
                        Text="{CompiledBinding TrackNumber.Value, Mode=TwoWay}"
                        Classes="Editor"/>
                </Panel>
            </Border>

        </VirtualizingStackPanel>
    </ScrollViewer>
</UserControl>
