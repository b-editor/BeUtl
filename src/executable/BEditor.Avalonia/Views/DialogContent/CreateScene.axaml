<views:FluentWindow
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:props="using:BEditor.Properties"
    xmlns:views="using:BEditor.Views"
    xmlns:titlebar="using:BEditor.Views.CustomTitlebars"
    xmlns:dialogvm="using:BEditor.ViewModels.DialogContent"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    mc:Ignorable="d" Width="800" Height="450"
    WindowStartupLocation="CenterScreen"
    x:Class="BEditor.Views.DialogContent.CreateScene"
    x:DataType="dialogvm:CreateSceneViewModel"
    Classes="fluent">
    <Grid>
        <StackPanel Margin="8">
            <TextBlock
                Margin="0,0,0,16"
                FontSize="24"
                Text="{x:Static props:Strings.CreateScene}" />

            <!--  Width  -->
            <StackPanel Margin="8">
                <TextBlock Text="{x:Static props:Strings.Width}" />

                <ui:NumberBox
                    MinWidth="240"
                    Margin="0,8"
                    Value="{CompiledBinding Width.Value, Mode=TwoWay}" />
            </StackPanel>

            <!--  Height  -->
            <StackPanel Margin="8">
                <TextBlock Text="{x:Static props:Strings.Height}" />

                <ui:NumberBox
                    MinWidth="240"
                    Margin="0,8"
                    Value="{CompiledBinding Height.Value, Mode=TwoWay}" />
            </StackPanel>

            <!--  Name  -->
            <StackPanel Margin="8,24,8,8">
                <TextBlock Text="{x:Static props:Strings.Name}" />

                <TextBox
                    HorizontalAlignment="Left"
                    MinWidth="240"
                    Margin="0,8"
                    Text="{CompiledBinding Name.Value, Mode=TwoWay}" />
            </StackPanel>

        </StackPanel>

        <StackPanel
            Margin="8"
            Spacing="8"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Click="CloseClick"
                Content="{x:Static props:Strings.Cancel}"
                IsCancel="True"/>
            <Button
                Classes="accent"
                Click="CloseClick"
                Command="{CompiledBinding Create, Mode=OneTime}"
                Content="{x:Static props:Strings.Create}"
                IsDefault="True"/>
        </StackPanel>

    </Grid>
</views:FluentWindow>
