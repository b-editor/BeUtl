<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    xmlns:vm="using:BEditor.ViewModels.Properties"
    xmlns:prop="using:BEditor.Properties"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    xmlns:uip="using:FluentAvalonia.UI.Controls.Primitives"
    x:DataType="vm:ValuePropertyViewModel"
    Height="40"
    Background="Transparent"
    x:Class="BEditor.Views.Properties.ValuePropertyView">
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="{x:Static prop:Strings.Reset}" Command="{CompiledBinding Reset, Mode=OneTime}" />
            <MenuItem Header="{x:Static prop:Strings.Bind}" Command="{CompiledBinding Bind, Mode=OneTime}" />
            <MenuItem Header="{x:Static prop:Strings.CopyID}" Command="{CompiledBinding CopyID, Mode=OneTime}" />
        </ContextMenu>
    </UserControl.ContextMenu>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120*" MinWidth="50" MaxWidth="100" />
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="*" MinWidth="100" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="13"
            Text="{Binding Property.PropertyMetadata.Name, Mode=OneTime}" />

        <ui:NumberBox
            Grid.Column="3"
            Margin="8,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Value="{CompiledBinding Property.Value, Mode=OneWay}"
            Maximum="{CompiledBinding Maximum, Mode=OneTime}"
            Minimum="{CompiledBinding Minimum, Mode=OneTime}"
            GotFocus="NumericUpDown_GotFocus"
            LostFocus="NumericUpDown_LostFocus"
            ValueChanged="NumericUpDown_ValueChanged">
            <ui:NumberBox.Styles>
                <Style Selector="TextBox">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderThickness" Value="0,1,0,0" />
                </Style>
            </ui:NumberBox.Styles>
        </ui:NumberBox>

    </Grid>
</UserControl>
