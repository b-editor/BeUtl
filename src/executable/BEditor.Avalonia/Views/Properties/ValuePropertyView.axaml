<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    xmlns:vm="using:BEditor.ViewModels.Properties"
    xmlns:prop="using:BEditor.LangResources"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    xmlns:uip="using:FluentAvalonia.UI.Controls.Primitives"
    x:DataType="vm:ValuePropertyViewModel"
    Height="40"
    Background="Transparent"
    x:Class="BEditor.Views.Properties.ValuePropertyView">
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="{x:Static prop:Strings.Reset}" Command="{CompiledBinding Reset, Mode=OneTime}" />
            <MenuItem Header="{x:Static prop:Strings.Bind}" Command="{CompiledBinding Bind, Mode=OneTime}" />
            <MenuItem Header="{x:Static prop:Strings.CopyID}" Command="{CompiledBinding CopyID, Mode=OneTime}" />
        </ContextMenu>
    </UserControl.ContextMenu>
    <Grid ColumnDefinitions="200,*">

        <TextBlock
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            ToolTip.Tip="{CompiledBinding Property.PropertyMetadata.Name, Mode=OneTime}"
            Text="{CompiledBinding Property.PropertyMetadata.Name, Mode=OneTime}" />

        <NumericUpDown
            Grid.Column="1"
            Increment="10"
            x:Name="Numeric"
            FormatString="{CompiledBinding Property.PropertyMetadata.FormatString, Mode=OneWay}"
            Value="{CompiledBinding Property.Value, Mode=OneWay}"
            Maximum="{CompiledBinding Maximum, Mode=OneTime}"
            Minimum="{CompiledBinding Minimum, Mode=OneTime}"
            GotFocus="NumericUpDown_GotFocus"
            LostFocus="NumericUpDown_LostFocus"
            ValueChanged="NumericUpDown_ValueChanged">
            <NumericUpDown.Styles>
                <Style Selector="NumericUpDown">
                    <Setter Property="Margin" Value="8,4" />
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                    <Setter Property="VerticalAlignment" Value="Stretch" />
                    <Setter Property="Height" Value="32" />
                    <Setter Property="ShowButtonSpinner" Value="False" />
                </Style>

                <Style Selector="ButtonSpinner.NumericUpDownButtonSpinnerStyle">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderThickness" Value="0,1,0,0" />
                </Style>

                <Style Selector="ButtonSpinner.NumericUpDownButtonSpinnerStyle:pointerover">
                    <Setter Property="Background" Value="{DynamicResource TextControlBackgroundPointerOver}" />
                </Style>

                <Style Selector="NumericUpDown[IsKeyboardFocusWithin=true] /template/ ButtonSpinner#PART_Spinner">
                    <Setter Property="Background" Value="{DynamicResource TextControlBackgroundFocused}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource TextControlBorderBrushFocused}"/>
                    <Setter Property="BorderThickness" Value="{DynamicResource TextControlBorderThemeThicknessFocused}" />
                </Style>
            </NumericUpDown.Styles>
        </NumericUpDown>

    </Grid>
</UserControl>
