<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:BEditor.ViewModels.Settings"
             xmlns:resources="using:BEditor.Properties"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:uip="using:FluentAvalonia.UI.Controls.Primitives"
             x:DataType="vm:AppearanceViewModel"
             xmlns:root="clr-namespace:BEditor;assembly=BEditor.Settings"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BEditor.Views.Settings.Appearance">
    <UserControl.DataContext>
        <vm:AppearanceViewModel/>
    </UserControl.DataContext>
    <ScrollViewer>
        <VirtualizingStackPanel>

            <TextBlock Text="{x:Static resources:Strings.General}" Classes="SettingsHeader"/>

            <CheckBox
                ToolTip.Tip="{x:Static resources:Strings.TheChangesWillBeAppliedAfterRestarting}"
                Content="{x:Static resources:Strings.UseDarkMode}"
                IsChecked="{Binding UseDarkMode, Source={x:Static root:Settings.Default}, Mode=TwoWay}"
                Classes="SettingsCheckBox" />

            <Separator Height="16" />

            <CheckBox
                ToolTip.Tip="{x:Static resources:Strings.TheChangesWillBeAppliedAfterRestarting}"
                Content="{x:Static resources:Strings.ShowStartWindow}"
                IsChecked="{Binding ShowStartWindow, Source={x:Static root:Settings.Default}, Mode=TwoWay}"
                Classes="SettingsCheckBox"/>

            <Separator Height="16" />

            <TextBlock Text="{x:Static resources:Strings.Timeline}" Classes="SettingsHeader"/>

            <TextBlock Text="{x:Static resources:Strings.ClipHeight}" Classes="SettingsItemHeader"/>

            <NumericUpDown
                ToolTip.Tip="{x:Static resources:Strings.TheChangesWillBeAppliedAfterRestarting}"
                Value="{Binding ClipHeight, Source={x:Static root:Settings.Default}, Mode=TwoWay}"
                Classes="SettingsNumericUpDown"/>

            <Separator Height="16" />

            <TextBlock Text="{x:Static resources:Strings.WidthOf1Frame}" Classes="SettingsItemHeader"/>

            <NumericUpDown
                ToolTip.Tip="{x:Static resources:Strings.TheChangesWillBeAppliedAfterRestarting}"
                Value="{Binding FrameWidth, Source={x:Static root:Settings.Default}, Mode=TwoWay}"
                Classes="SettingsNumericUpDown"/>

            <Separator Height="16" />

            <CheckBox
                Content="{x:Static resources:Strings.FixSeekbar}"
                IsChecked="{Binding FixSeekbar, Source={x:Static root:Settings.Default}, Mode=TwoWay}"
                Classes="SettingsCheckBox"/>

            <Separator Height="16" />

            <TextBlock Text="{x:Static resources:Strings.LayerThickness}" Classes="SettingsItemHeader" />

            <ComboBox
                SelectedItem="{CompiledBinding SelectedLayerBorder.Value, Mode=TwoWay}"
                Items="{CompiledBinding LayerBorderItems}"
                Classes="SettingsComboBox">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Text}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Separator Height="16" />

            <TextBlock Text="{x:Static resources:Strings.Language}" Classes="SettingsItemHeader"/>

            <ComboBox
                ToolTip.Tip="{x:Static resources:Strings.TheChangesWillBeAppliedAfterRestarting}"
                Items="{CompiledBinding Langs, Mode=OneTime}"
                SelectedItem="{Binding Language, Source={x:Static root:Settings.Default}, Mode=TwoWay}"
                Classes="SettingsComboBox"/>

            <Separator Height="16" />
        </VirtualizingStackPanel>
    </ScrollViewer>
</UserControl>
