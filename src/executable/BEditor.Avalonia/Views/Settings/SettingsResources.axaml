<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    xmlns:uip="using:FluentAvalonia.UI.Controls.Primitives"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <Style Selector="ComboBox.SettingsComboBox">
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Margin" Value="16,0,16,0"/>
        <Setter Property="Width" Value="240"/>
    </Style>

    <Style Selector="TextBox.SettingsTextBox">
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="Margin" Value="16,0,16,0"/>
        <Setter Property="Width" Value="240"/>
    </Style>

    <Style Selector="NumericUpDown.SettingsNumericUpDown" >
        <Setter Property="ShowButtonSpinner" Value="True" />
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="Margin" Value="16,0,16,0"/>
        <Setter Property="Width" Value="240"/>
    </Style>

    <Style Selector="ui|NumberBox.SettingsNumericUpDown" >
        <Setter Property="Margin" Value="16,0,16,0"/>
        <Setter Property="Width" Value="240"/>
        <Setter Property="SpinButtonPlacementMode" Value="Inline" />
    </Style>

    <Style Selector="CheckBox.SettingsCheckBox">
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Height" Value="24"/>
        <Setter Property="Margin" Value="16,0,16,0"/>
    </Style>

    <Style Selector="ToggleSwitch.SettingsToggleSwitch">
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="16,0,16,0"/>
    </Style>

    <Style Selector="Label.SettingsItemHeader">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Margin" Value="16,0,16,0"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <Style Selector="TextBlock.SettingsItemHeader">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Margin" Value="16,8"/>
    </Style>

    <Style Selector="TextBlock.SettingsHeader">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="Margin" Value="16,12"/>
    </Style>

    <Style Selector="TextBlock.Header">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style Selector="TextBlock.Header2">
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style Selector="Border.Item">
        <Setter Property="MaxHeight" Value="64" />
        <Setter Property="CornerRadius" Value="{DynamicResource ControlCornerRadius}"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}" />
    </Style>
    <Style Selector="Button.Item">
        <Setter Property="MaxHeight" Value="64" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Padding" Value="16"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
    </Style>
    <Style Selector="ComboBox.Editor">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="MinWidth" Value="180"/>
    </Style>
    <Style Selector="TextBox.Editor">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="MinWidth" Value="180"/>
    </Style>
    <Style Selector="NumericUpDown.Editor">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="MinWidth" Value="180"/>
    </Style>
    <Style Selector="ToggleSwitch.Editor">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
</Styles>
