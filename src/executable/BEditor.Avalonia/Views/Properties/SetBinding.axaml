<views:FluentWindow
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prop="using:BEditor.LangResources"
    xmlns:views="using:BEditor.Views"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    MinWidth="500"
    MinHeight="300"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner"
    x:Class="BEditor.Views.Properties.SetBinding">
    <Grid RowDefinitions="*,Auto">
        <StackPanel
            Grid.Row="1"
            Margin="8,16,8,8"
            Spacing="8"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button
                Classes="accent"
                Click="CloseButton"
                Command="{Binding OKCommand, Mode=OneTime}"
                CommandParameter="{Binding #Text_Box.Text}"
                Content="{x:Static prop:Strings.OK}" />
            <Button
                Click="CloseButton"
                Content="{x:Static prop:Strings.Cancel}" />
            <Button
                Margin="8,0,0,0"
                Click="CloseButton"
                Command="{Binding DisconnectCommand, Mode=OneTime}"
                Content="{x:Static prop:Strings.Disconnect}" />
        </StackPanel>

        <StackPanel>
            <TextBlock Margin="8" FontSize="16" Text="ID" />
            <TextBox
                x:Name="Text_Box"
                Margin="8,0"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Text="{Binding TargetID.Value, Mode=OneWay}" />
        </StackPanel>
    </Grid>
</views:FluentWindow>
