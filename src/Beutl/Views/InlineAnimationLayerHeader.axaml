<UserControl x:Class="Beutl.Views.InlineAnimationLayerHeader"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:icons="using:FluentIcons.FluentAvalonia"
             xmlns:lang="using:Beutl.Language"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:vm="using:Beutl.ViewModels"
             Height="{Binding ObserveHeight.Value}"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Top"
             VerticalContentAlignment="Top"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:DataType="vm:InlineAnimationLayerViewModel"
             mc:Ignorable="d">
    <UserControl.Styles>
        <Style Selector="Button.SmallButton">
            <Setter Property="Padding" Value="0,0,0,3.5" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="VerticalContentAlignment" Value="Bottom" />
        </Style>
        <Style Selector="TextBox.custom">
            <Style.Resources>
                <Thickness x:Key="TextControlBorderThemeThicknessFocused">0</Thickness>
            </Style.Resources>
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10,0,6,0" />
            <Setter Property="MinHeight" Value="{DynamicResource LayerHeight}" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
    </UserControl.Styles>
    <Grid Height="{DynamicResource LayerHeight}" ColumnDefinitions="14,Auto,Auto,Auto,Auto,*">

        <Border x:Name="border"
                Grid.Column="1"
                CornerRadius="{DynamicResource ControlCornerRadius}">
            <Border.Styles>
                <Style Selector="Border#border:pointerover">
                    <Setter Property="Background" Value="{DynamicResource ButtonBackgroundPointerOver}" />
                    <Setter Property="Cursor" Value="SizeNorthSouth" />
                </Style>
            </Border.Styles>
            <Border.ContextFlyout>
                <ui:FAMenuFlyout>
                    <ui:ToggleMenuFlyoutItem IsChecked="{CompiledBinding ShowAnimationVisual.Value}" Text="{x:Static lang:Strings.ShowPreview}" />

                    <ui:MenuFlyoutItem Click="OpenAnimationTimelineClick" Text="{x:Static lang:Strings.OpenTimeline}">
                        <ui:MenuFlyoutItem.IconSource>
                            <icons:SymbolIconSource Symbol="Open" />
                        </ui:MenuFlyoutItem.IconSource>
                    </ui:MenuFlyoutItem>
                </ui:FAMenuFlyout>
            </Border.ContextFlyout>
            <icons:SymbolIcon FontSize="14" Symbol="ReOrderDotsVertical" />
        </Border>

        <Button Grid.Column="2"
                Width="22"
                Classes="SmallButton"
                Command="{CompiledBinding Close}"
                Theme="{StaticResource TransparentButton}">
            <icons:SymbolIcon Symbol="Dismiss" />
        </Button>

        <ToggleButton x:Name="ExpandToggle"
                      Grid.Column="3"
                      Width="30"
                      Padding="5"
                      VerticalAlignment="Stretch"
                      IsChecked="{CompiledBinding IsExpanded.Value}"
                      Theme="{StaticResource ExpandCollapseToggleButtonStyle}" />

        <Button Grid.Column="4"
                Width="30"
                Classes="SmallButton"
                Click="OpenTab_Click"
                Theme="{StaticResource TransparentButton}">
            <icons:SymbolIcon Symbol="Open" />
        </Button>


        <TextBox Grid.Column="5"
                 Classes="custom"
                 IsReadOnly="True"
                 Text="{CompiledBinding Header}" />
    </Grid>
</UserControl>
