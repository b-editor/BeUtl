<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:BEditor.ViewModels"
    xmlns:prop="using:BEditor.Properties"
    x:DataType="vm:VideoOutputViewModel"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="BEditor.Views.VideoOutputPages.Infomation">
    <ScrollViewer>
        <VirtualizingStackPanel>
            <!--情報-->
            <TextBlock Text="{x:Static prop:Strings.Infomation}" Classes="SettingsHeader"/>

            <!--シーン-->
            <TextBlock Text="{x:Static prop:Strings.Scene}" Classes="SettingsItemHeader"/>

            <ComboBox
                Items="{CompiledBinding Project.SceneList, Mode=OneTime}"
                SelectedItem="{CompiledBinding SelectedScene.Value, Mode=TwoWay}"
                Classes="SettingsComboBox">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding SceneName}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Separator Height="16" />

            <!--横幅-->
            <TextBlock Text="{x:Static prop:Strings.Width}" Classes="SettingsItemHeader"/>

            <TextBox
                IsReadOnly="True"
                Text="{CompiledBinding SelectedScene.Value.Width, Mode=OneWay}"
                Classes="SettingsTextBox"/>

            <Separator Height="16" />

            <!--高さ-->
            <TextBlock Text="{x:Static prop:Strings.Height}" Classes="SettingsItemHeader"/>

            <TextBox
                IsReadOnly="True"
                Text="{CompiledBinding SelectedScene.Value.Height, Mode=OneWay}"
                Classes="SettingsTextBox"/>

            <Separator Height="16" />

            <!--フレームレート-->
            <TextBlock Text="{x:Static prop:Strings.Framerate}" Classes="SettingsItemHeader"/>

            <TextBox
                IsReadOnly="True"
                Text="{CompiledBinding Project.Framerate, Mode=OneWay}"
                Classes="SettingsTextBox"/>

            <Separator Height="16" />

            <!--サンプリングレート-->
            <TextBlock Text="{x:Static prop:Strings.Samplingrate}" Classes="SettingsItemHeader"/>

            <TextBox
                IsReadOnly="True"
                Text="{CompiledBinding Project.Samplingrate, Mode=OneWay}"
                Classes="SettingsTextBox"/>

        </VirtualizingStackPanel>
    </ScrollViewer>
</UserControl>
