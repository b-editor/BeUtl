<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="548"
             x:Class="BEditorNext.Views.AnimationEditors.BaseVector4AnimationEditor">
    <Grid ColumnDefinitions="2*,3*,Auto" RowDefinitions="*,Auto">
        <Grid.Styles>
            <Style Selector="TextBox">
                <Setter Property="Margin" Value="4" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="VerticalAlignment" Value="Stretch" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
            </Style>
        </Grid.Styles>
        <TextBlock
            Margin="10,0,0,0"
            Text="{Binding Header.Value}"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" />

        <Carousel Grid.Column="1" x:Name="carousel">
            <Carousel.PageTransition>
                <PageSlide Orientation="Horizontal"
                           SlideInEasing="0.1,0.9,0.2,1.0"
                           SlideOutEasing="0.1,0.9,0.2,1.0"
                           Duration="00:00:00.67" />
            </Carousel.PageTransition>
            <Grid ColumnDefinitions="24,*,*" RowDefinitions="*,*">

                <FluentIconRegular IconType="Border_Left" Width="16" Height="16" />

                <TextBox
                    Grid.Column="1"
                    x:Name="prevXTextBox">
                    <TextBox.InnerRightContent>
                        <TextBlock x:Name="prevXText" VerticalAlignment="Center" Margin="4,0" />
                    </TextBox.InnerRightContent>
                </TextBox>

                <TextBox
                    Grid.Column="2"
                    x:Name="prevYTextBox">
                    <TextBox.InnerRightContent>
                        <TextBlock x:Name="prevYText" VerticalAlignment="Center" Margin="4,0" />
                    </TextBox.InnerRightContent>
                </TextBox>

                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    x:Name="prevZTextBox">
                    <TextBox.InnerRightContent>
                        <TextBlock x:Name="prevZText" VerticalAlignment="Center" Margin="4,0" />
                    </TextBox.InnerRightContent>
                </TextBox>

                <TextBox
                    Grid.Row="1"
                    Grid.Column="2"
                    x:Name="prevWTextBox">
                    <TextBox.InnerRightContent>
                        <TextBlock x:Name="prevWText" VerticalAlignment="Center" Margin="4,0" />
                    </TextBox.InnerRightContent>
                </TextBox>
            </Grid>
            <Grid ColumnDefinitions="24,*,*" RowDefinitions="*,*">
                <FluentIconRegular IconType="Border_Right" Width="16" Height="16" />

                <TextBox
                    Grid.Column="1"
                    x:Name="nextXTextBox">
                    <TextBox.InnerRightContent>
                        <TextBlock x:Name="nextXText" VerticalAlignment="Center" Margin="4,0" />
                    </TextBox.InnerRightContent>
                </TextBox>

                <TextBox
                    Grid.Column="2"
                    x:Name="nextYTextBox">
                    <TextBox.InnerRightContent>
                        <TextBlock x:Name="nextYText" VerticalAlignment="Center" Margin="4,0" />
                    </TextBox.InnerRightContent>
                </TextBox>

                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    x:Name="nextZTextBox">
                    <TextBox.InnerRightContent>
                        <TextBlock x:Name="nextZText" VerticalAlignment="Center" Margin="4,0" />
                    </TextBox.InnerRightContent>
                </TextBox>

                <TextBox
                    Grid.Row="1"
                    Grid.Column="2"
                    x:Name="nextWTextBox">
                    <TextBox.InnerRightContent>
                        <TextBlock x:Name="nextWText" VerticalAlignment="Center" Margin="4,0" />
                    </TextBox.InnerRightContent>
                </TextBox>
            </Grid>
        </Carousel>

        <Button Grid.Row="2"
                Grid.Column="1"
                BorderThickness="0"
                Margin="0,0,4,4"
                Click="Slide_Click"
                HorizontalAlignment="Right">
            <FluentIconRegular IconType="Chevron_Right"
                               x:Name="button_icon"
                               Width="12" Height="12" />
        </Button>

    </Grid>
</UserControl>
