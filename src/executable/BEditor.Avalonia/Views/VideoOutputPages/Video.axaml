<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:BEditor.ViewModels"
    xmlns:prop="using:BEditor.LangResources"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    x:DataType="vm:VideoOutputViewModel"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="BEditor.Views.VideoOutputPages.Video">
    <ScrollViewer>
        <VirtualizingStackPanel Spacing="8" Margin="16,8">

            <TextBlock Text="{x:Static prop:Strings.Video}" Classes="Header"/>

            <!--ビットレート-->
            <Border Classes="Item">
                <Panel>
                    <TextBlock Text="Bitrate" VerticalAlignment="Center" />

                    <NumericUpDown
                        Value="{CompiledBinding VideoBitrate.Value, Mode=TwoWay}"
                        Classes="Editor"/>
                </Panel>
            </Border>

            <!--キーフレームレート-->
            <Border Classes="Item">
                <Panel>
                    <TextBlock Text="KeyframeRate" VerticalAlignment="Center" />

                    <NumericUpDown
                        Value="{CompiledBinding KeyframeRate.Value, Mode=TwoWay}"
                        Classes="Editor"/>
                </Panel>
            </Border>

            <TextBlock
                Margin="16,0"
                Text="{x:Static prop:Strings.EncoderIsNotSet}"
                IsVisible="{CompiledBinding !OutputIsEnabled.Value}" />

            <ContentPresenter x:Name="VideoEncoderSettings" Margin="-16,-8" />

        </VirtualizingStackPanel>
    </ScrollViewer>
</UserControl>
