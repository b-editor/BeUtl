<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:c="using:BEditor.Controls">
    <Style Selector="TextBox.custom">
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="RenderTransform" Value="none" />
        <Setter Property="Transitions">
            <Transitions>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:.075" />
            </Transitions>
        </Setter>
    </Style>
    <Style Selector="TextBox.custom:pointerover /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonBackgroundPointerOver}"/>
        <Setter Property="Background" Value="{DynamicResource ButtonBackgroundPointerOver}" />
    </Style>
    <Style Selector="TextBox.custom:focus /template/ Border#PART_BorderElement">
        <Setter Property="Background" Value="{DynamicResource ButtonBackgroundPointerOver}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonBackgroundPointerOver}"/>
    </Style>
</Styles>