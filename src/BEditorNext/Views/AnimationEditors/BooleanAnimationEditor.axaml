<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BEditorNext.Views.AnimationEditors.BooleanAnimationEditor">
    <Grid ColumnDefinitions="2*,3*,Auto" RowDefinitions="*,*">
        <TextBlock
            Margin="10,0,0,0"
            Text="{Binding Header.Value}"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" />

        <Grid Grid.Column="1" ColumnDefinitions="24,*,Auto">

            <FluentIconRegular IconType="Border_Left" Width="16" Height="16" />

            <CheckBox
                HorizontalAlignment="Right"
                Grid.Column="1"
                x:Name="prevCheckBox"
                IsChecked="{Binding Animation.Previous, Mode=OneWay}" />
        </Grid>

        <Grid Grid.Column="1" Grid.Row="1" ColumnDefinitions="24,*,Auto">
            <FluentIconRegular IconType="Border_Right" Width="16" Height="16" />

            <CheckBox
                HorizontalAlignment="Right"
                Grid.Column="1"
                x:Name="nextCheckBox"
                IsChecked="{Binding Animation.Next, Mode=OneWay}" />
        </Grid>
    </Grid>
</UserControl>
