<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:props="using:BEditor.Properties"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    mc:Ignorable="d"
    Padding="8"
    Width="240"
    x:Class="BEditor.Views.Timelines.SetMaxFrame">
    <Grid RowDefinitions="*,Auto">
        <StackPanel>
            <TextBlock Text="{x:Static props:Strings.SetMaximumFrame}" />

            <ui:NumberBox
                HorizontalAlignment="Stretch"
                IsEnabled="{Binding #Toggle.IsChecked}"
                Margin="0,8"
                Minimum="0"
                x:Name="Num" />

            <ToggleButton
                x:Name="Toggle"
                Click="Toggle_Click"
                Content="{x:Static props:Strings.UseCurrentFrame}" />
            
        </StackPanel>

        <StackPanel
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Grid.Row="1"
            Margin="0,16,0,0"
            Orientation="Horizontal"
            Spacing="8">
            <Button
                IsCancel="True"
                Click="Cancel_Click"
                Content="{x:Static props:Strings.Cancel}" /> 

            <Button
                IsDefault="True"
                Classes="accent"
                Click="OK_Click"
                Content="{x:Static props:Strings.OK}" /> 
        </StackPanel>
    </Grid>
</UserControl>
